datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Data model
model Project {
  id             Int      @id @default(autoincrement())
  name           String
  thumbnail      String
  images         String[]
  desc           String
  role           String
  frontend_techs String[]
  backend_techs  String[]
  tags           String[]
  demo           String?
  source         String?
  created_at     DateTime @default(now())
}
